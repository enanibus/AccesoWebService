<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Modificacion" >

    <TextView
        android:id="@+id/textViewModificacionDNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextModificacionDNI"
        android:layout_alignBottom="@+id/editTextModificacionDNI"
        android:layout_alignParentLeft="true"
        android:text="@string/dni"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/dni" />

    <TextView
        android:id="@+id/textViewModificacionNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextModificacionNombre"
        android:layout_alignBottom="@+id/editTextModificacionNombre"
        android:layout_alignParentLeft="true"
        android:text="@string/nombre"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/nombre" />

    <TextView
        android:id="@+id/textViewModificacionEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextModificacionEquipo"
        android:layout_alignBottom="@+id/editTextModificacionEquipo"
        android:layout_alignLeft="@+id/textViewModificacionTelefono"
        android:text="@string/equipo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/equipo" />

    <TextView
        android:id="@+id/textViewModificacionApellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextModificacionApellidos"
        android:layout_alignBottom="@+id/editTextModificacionApellidos"
        android:layout_alignLeft="@+id/textViewModificacionNombre"
        android:text="@string/apellidos"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/apellidos" />

    <TextView
        android:id="@+id/textViewModificacionDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextModificacionDireccion"
        android:layout_alignBottom="@+id/editTextModificacionDireccion"
        android:layout_alignLeft="@+id/textViewModificacionApellidos"
        android:text="@string/direccion"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/direccion" />

    <TextView
        android:id="@+id/textViewModificacionTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextModificacionTelefono"
        android:layout_alignBottom="@+id/editTextModificacionTelefono"
        android:layout_alignLeft="@+id/textViewModificacionDireccion"
        android:text="@string/telefono"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/telefono" />

    <EditText
        android:id="@+id/editTextModificacionDNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/textViewModificacionDireccion"
        android:ems="10"
        android:hint="@string/dni"
        android:focusable="false" />

    <EditText
        android:id="@+id/editTextModificacionNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextModificacionDNI"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/textViewModificacionDireccion"
        android:ems="10"
        android:hint="@string/nombre"
        android:maxLength="20" />

    <EditText
        android:id="@+id/editTextModificacionApellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextModificacionNombre"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/textViewModificacionDireccion"
        android:ems="10"
        android:hint="@string/apellidos"
        android:maxLength="40" />

    <EditText
        android:id="@+id/editTextModificacionDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextModificacionApellidos"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/textViewModificacionDireccion"
        android:ems="10"
        android:hint="@string/direccion"
        android:maxLength="40" />

    <EditText
        android:id="@+id/editTextModificacionTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextModificacionDireccion"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/textViewModificacionDireccion"
        android:ems="10"
        android:hint="@string/telefono"
        android:maxLength="20" />

    <EditText
        android:id="@+id/editTextModificacionEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextModificacionTelefono"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/textViewModificacionDireccion"
        android:ems="10"
        android:hint="@string/equipo"
        android:maxLength="10" />

    <TextView
        android:id="@+id/textViewModificacionTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/modificacion"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/imageButtonModificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:contentDescription="@string/modificacion"
        android:onClick="update"
        android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>
